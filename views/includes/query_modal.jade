//- includes/query_modal.jade

.modal.fade#queryModal(tabindex='-1', role='dialog', aria-hidden='true')
	.modal-dialog
		.modal-content(style="border-radius: 0; border-style: solid; border-width: thin; border-color: #5f5f5f; background-color: white")
			.model-header
				.container-fluid
					//- close button
					.row
						.col-xs-offset-10.col-xs-2
							button.close(type='button', data-dismiss='modal')
								.qi-cart-modal-close
									i.fa.fa-times-circle
					//- modal title
					.row
						.col-xs-offset-1.col-xs-11.qi-cart-modal-header-title-copy
							| Query with your own signature

			.modal-body
				include ../query.jade