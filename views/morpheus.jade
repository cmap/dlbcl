extends ./template_pagewithsidebar
- var app = { title:"Morpheus" }
block sidebar
    section.landing
        div.indented
            img.app-main(src="//assets.clue.io/clue/public/img/morpheus_landing_img.png")
            p.app-name Morpheus
            p.subline Versatile matrix visualization and analysis software
            h3 View your dataset as a heat map, and then explore the interactive tools in Morpheus. Cluster, create new annotations, search, filter, sort, display charts, and more. &nbsp;
                img.app-icon(src="//assets.clue.io/clue/public/img/app_icons/app-icon-morpheus.svg")

            h3(style="margin-top:20px;") 27,000+ users
            h3 89,000+ matrices analyzed


block footer
    include includes/footerapp.jade
block mainbar
        //.page-title.after-TOC Load data file

        section.landing

            h1 Load data file
            h3
                a(target="_blank" href="/connectopedia/gct_format") GCT 1.3
                | ,&nbsp;
                a(target="_blank" href="http://www.broadinstitute.org/cancer/software/genepattern/gp_guides/file-formats/sections/gct") GCT 1.2
                | ,&nbsp;
                a(target="_blank" href="https://wiki.nci.nih.gov/display/TCGA/Mutation+Annotation+Format+%28MAF%29+Specification") MAF
                | ,&nbsp;
                a(target="_blank" href="http://www.broadinstitute.org/cancer/software/gsea/wiki/index.php/Data_formats#GMT:_Gene_Matrix_Transposed_file_format_.28.2A.gmt.29") GMT
                | , a tab-delimited text file, an Excel spreadsheet, or a saved Morpheus session.
            h3 All data is processed in the browser and never sent to any server.

            #mlanding

            hr


