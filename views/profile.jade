extends ./basic_layout.jade

block title
	title Profile

block content
		.container
			.page-header.text-center
				h1
					span.fa.fa-leaf
					| Database Credentials
				a(href="/logout").btn.btn-primary.btn-sm Logout
			.row
				if user.email
					.col-sm-6.col-sm-offset-3
						.well
							h3
								span.fa.fa-user
								| Local
							p
								strong id
								| : #{user._id}
							p
								strong email
								| : #{user.email}
							p
								strong password
								| : #{user.password}
				if user.facebook.id
					.col-sm-6.col-sm-offset-3
						.well
							h3.text-primary
								span.fa.fa-facebook
								| Facebook
							p
								strong id
								| : #{user.facebook.id}
							p
								strong token
								| : #{user.facebook.token}
							p
								strong email
								| : #{user.facebook.email}
							p
								strong name
								| : #{user.facebook.name}
				if user.twitter.id
					.col-sm-6.col-sm-offset-3
						.well
							h3.text-info
								span.fa.fa-twitter
								| Twitter
							p
								strong id
								| : #{user.twitter.id}
							p
								strong token
								| : #{user.twitter.token}
							p
								strong username
								| : #{user.twitter.username}
							p
								strong displayName
								| : #{user.twitter.displayName}
				if user.google.id
					.col-sm-6.col-sm-offset-3
						.well
							h3.text-danger
								span.fa.fa-google-plus
								| Google
							p
								strong id
								| : #{user.google.id}
							p
								strong token
								| : #{user.google.token}
							p
								strong email
								| : #{user.google.email}
							p
								strong name
								| : #{user.google.name}
